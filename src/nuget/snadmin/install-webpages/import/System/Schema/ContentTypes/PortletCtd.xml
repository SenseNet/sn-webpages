<?xml version="1.0" encoding="utf-8"?>
<ContentType name="Portlet" parentType="ListItem" handler="SenseNet.ContentRepository.GenericContent" xmlns="http://schemas.sensenet.com/SenseNet/ContentRepository/ContentTypeDefinition">
  <DisplayName>$Ctd-Portlet,DisplayName</DisplayName>
  <Description>$Ctd-Portlet,Description</Description>
  <Icon>FormItem</Icon>
  <Fields>
    <Field name="Description" type="LongText">
      <Configuration>
        <VisibleBrowse>Show</VisibleBrowse>
        <VisibleEdit>Show</VisibleEdit>
        <VisibleNew>Show</VisibleNew>
      </Configuration>
    </Field>
    <Field name="TypeName" type="ShortText">
      <DisplayName>$Ctd-Portlet,TypeName-DisplayName</DisplayName>
      <Configuration>
        <VisibleBrowse>Show</VisibleBrowse>
        <VisibleEdit>Show</VisibleEdit>
        <VisibleNew>Show</VisibleNew>
      </Configuration>
    </Field>
    <Field name="ImageRef" type="Reference">
      <DisplayName>$Ctd-Portlet,ImageRef-DisplayName</DisplayName>
      <Configuration>
        <VisibleBrowse>Hide</VisibleBrowse>
        <VisibleEdit>Hide</VisibleEdit>
        <VisibleNew>Hide</VisibleNew>
        <AllowMultiple>false</AllowMultiple>
      </Configuration>
    </Field>
    <Field name="ImageData" type="Binary">
      <DisplayName>$Ctd-Portlet,ImageData-DisplayName</DisplayName>
      <Indexing>
        <Mode>No</Mode>
      </Indexing>
      <Configuration>
        <VisibleBrowse>Hide</VisibleBrowse>
        <VisibleEdit>Hide</VisibleEdit>
        <VisibleNew>Hide</VisibleNew>
      </Configuration>
    </Field>
    <Field name="PortletImage" type="Image">
      <DisplayName>$Ctd-Portlet,PortletImage-DisplayName</DisplayName>
      <Bind property="ImageRef" />
      <Bind property="ImageData" />
      <Configuration>
        <VisibleBrowse>Show</VisibleBrowse>
        <VisibleEdit>Show</VisibleEdit>
        <VisibleNew>Show</VisibleNew>
        <ControlHint>sn:Image</ControlHint>
      </Configuration>
    </Field>
    <Field name="Hidden" type="Boolean">
      <DisplayName>$Ctd-Portlet,Hidden-DisplayName</DisplayName>
      <Description>$Ctd-Portlet,Hidden-Description</Description>
      <Configuration>
        <VisibleBrowse>Show</VisibleBrowse>
        <VisibleEdit>Show</VisibleEdit>
        <VisibleNew>Show</VisibleNew>
      </Configuration>
    </Field>
  </Fields>
</ContentType>